#!/usr/bin/env bash

if [ "$(which realpath 2>/dev/null)" ]; then
    BIN_DIR=$(dirname "$(realpath "$0")")
else    
    BIN_DIR=$(dirname "$(${PYTHON} -c "import os; print(os.path.realpath('$0'))")")
fi
ROOT_DIR="$BIN_DIR/.."
cd "$ROOT_DIR" || exit 1

source .env
mix deps.get --only prod
MIX_ENV=prod mix compile
npm run deploy --prefix ./assets
mix phx.digest
